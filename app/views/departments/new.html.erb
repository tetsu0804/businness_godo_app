<div class="row">
  <div class="col-sm-10 center-10-top rounded bg-white">
    <div class="row">
      <h2 class="title-font col-sm-3 offset-sm-1 index-title">部署作成</h2>
    </div>
    <div class="row">

        <%= form_with(model: @department, local: true, class: "col-sm-10 center-10-top") do |f| %>
          <div class="form-group">
            <%= f.label :department_name, '部署名' %>
            <%= f.text_field :department_name, class: 'form-control bg-light' %>
          </div>
          <%= f.submit '作成', class: 'btn btn-primary col-sm-4 offset-sm-4' %>
        <% end %>

    </div>
  </div>
</div>
