<div class="row">
  <div class="col-sm-10 show-width bg-white rounded">
    <div class="row top-blank">
        <div class="col-sm-2 offset-sm-1 title-font">部署</div>
        <% if current_user.admin? %>
          <div class="col-sm-7 offset-sm-1 float-rigth p-3 mb-2 bg-primary rounded-lg new-form text-center">
            <%= link_to '部署作成リンク',  new_department_path, class: 'text-white new-font' %>
          </div>
        <% end %>
    </div>


    <div class="row">
      <div class="col-sm-12 center-block">
        <% @departments.each do |department| %>
          <div class="col-sm-10 show-width shadow-lg p-3 mb-5 bg-light rounded  text-center">
            <%= link_to department.department_name, department_squeeze_path(department.id), class: 'main-content header-font' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
