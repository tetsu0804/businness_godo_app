<div class="row">
  <div class="col-sm-10 department show-width border rounded-lg bg-light">
      <div class="col text-center department new-font">
        <%= "#{l Time.zone.now, format: :month}の仕事一覧" %>
      </div>
    <div class="col-sm-10 d-flex center-10-top">

      <table class="table col-sm-8 text-center show-width  bg-light">
        <thead>
          <tr>
            <th scope="col">作業日</th>
            <th scope="col">会社名</th>
            <th scope="col">作業内容</th>
            <th scope="col">作業者</th>
          </tr>
        </thead>
        <tbody>
          <% @job_contents.each do |job_content| %>
          <tr>
            <th scope="row"><%= l job_content.start_time, format: :short %></th>
            <td><%= link_to job_content.trading_company.company_name, trading_company_path(job_content.trading_company.id), class: "text-dark" %></td>
            <td><%= link_to job_content.title,  job_content_path(job_content.id), class: "text-dark" %></td>
            <td><%= link_to job_content.user.name_full, user_path(job_content.user.id), class: "text-dark" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-sm-2 show-width bg-light">
        <% @past_jobs.each do |month, count| %>
          <% month = "#{month}" %>
          <% y = month.slice(0,4) %>
          <% m = month.slice(5,2) %>
          <% ym = "#{y}" + "#{m}" %>

          <%= link_to "#{month} (#{count})", year_month_path(ym.to_i), class: "text-dark" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
