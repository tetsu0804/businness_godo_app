<% unless @work_book.blank? %>
  <%= form_with(model: @work_book,url:  user_work_books_path, local: true) do |f| %>
    <%= f.hidden_field(:user_id, :value => @user.id) %>
    <%= f.label :paid, '有給' %>
    <%= f.check_box  :paid, {}, "vacation", "work" %>
    <%= f.submit '出勤' %>
  <% end %>
<% else %>


  <%= form_with(model: @edit_work_book, url:  user_work_book_path(@user.id, @edit_work_book.id), method: :patch, local: true) do |f| %>
    <%= f.submit '退勤' %>
  <% end %>
<% end %>
