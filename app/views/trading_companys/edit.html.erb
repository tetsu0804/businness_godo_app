<div class="col-md-12 department">
  <h1 class="text-center">取引会社作成</h1>

  <%= form_with(model: @company, url: trading_company_path, method: :patch, local: true, class: 'col-md-8 forms') do |f| %>

    <div class="form-group">
      <%= f.label :company_name, '会社名' %>
      <%= f.text_field :company_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :address, '住所' %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :tel, '電話番号' %>
      <%= f.number_field :tel, class: 'form-control' %>
    </div>

    <%= f.submit '編集', class: 'btn btn-primary' %>

  <% end %>
</div>
