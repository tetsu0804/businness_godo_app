<div class="row">
  <div class="col-sm-10 bg-white rounded center-20-top">
    <div class="row">
      <div class="col-sm-4 forms text-center title-font">取引会社作成</div>
    </div>

    <div class="row">
      <div class="col-sm-10 center-10-top">
        <%= form_with(model: @company, url: trading_company_path, method: :patch, local: true) do |f| %>

          <div class="form-group col-sm-6 forms">
            <%= f.label :company_name, '会社名' %>
            <%= f.text_field :company_name, class: 'form-control bg-light' %>
          </div>

          <div class="form-group col-sm-6 offset-sm-3">
            <%= f.label :address, '住所' %>
            <%= f.text_field :address, class: 'form-control bg-light' %>
          </div>

          <div class="form-group col-sm-6 offset-sm-3">
            <%= f.label :tel, '電話番号' %>
            <%= f.number_field :tel, class: 'form-control bg-light' %>
          </div>
          <div class="form-group col-sm-6 offset-sm-3">
            <%= f.submit '編集', class: 'btn btn-primary form-control' %>
          </div>
        <% end %>
      </div>
    </div>
</div>
